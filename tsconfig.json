{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types",
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/fetchFigma.js"
  ],
  "exclude": [
    "node_modules"
  ]
}